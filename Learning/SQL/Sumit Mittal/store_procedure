SELECT 
    department AS Department,
    employee AS Employee,
    salary AS Salary
FROM (
    SELECT 
        d.name AS department,
        e.name AS employee,
        e.salary,
        DENSE_RANK() OVER (
            PARTITION BY d.name
            ORDER BY e.salary DESC
        ) AS rn
    FROM Employee e
    INNER JOIN Department d
        ON e.departmentId = d.id
) t
WHERE rn = 1;
